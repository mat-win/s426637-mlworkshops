pipeline {
   agent { dockerfile true }

   stages {
      stage('Hello') {
         steps {
            echo 'Hello World'
         }
      }
	stage('Checkout')
	{
	steps{
		checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/mat-win/s426637-mlworkshops.git']]])
	}
	}
	 stage('CopyArtifacts')
      {
      	steps{
      		copyArtifacts filter: 'wer.txt', fingerprintArtifacts: true, projectName: 'ASR-eval', selector: lastSuccessful()
		copyArtifacts filter: 'srr.txt', fingerprintArtifacts: true, projectName: 'ASR-eval', selector: lastSuccessful()		
      	}
      }
      stage('Count metrics')
      {
      	steps{
      		sh label: 'metrics', script: './wykresy.sh'
      		
      	}
      }

   }
}
